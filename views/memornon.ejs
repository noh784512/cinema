<body class="no-sidebar">
<div id="page-wrapper">

    <!-- Header -->
    <% include header.ejs %>

    <!-- Main -->
    <div class="wrapper style1">

        <div class="ui two column doubling stackable grid container">
            <div class="column">
                <h3>회원 예매</h3>
                <% include component/signup_form.ejs %>
            </div>
            <div class="column">
                <h3>비회원 예매</h3>
                <form class="ui form" id="registration_nonmem_form">
                    <div class="field">
                        <div class="field">
                            <label>이름</label>
                            <input type="text" name="name" placeholder="이름을 입력해주세요">
                        </div>
                        <div class="field">
                            <label>생일</label>
                            <input type="date" name="birth" placeholder="생일을 입력해주세요">
                        </div>
                        <div class="field">
                            <label>비밀번호</label>
                            <input type="password" name="password" placeholder="비밀번호를 입력해주세요" data-type="password">
                        </div>
                        <div class="field">
                            <label>전화번호</label>
                            <input type="text" name="phone" placeholder="전화번호를 입력해주세요">
                        </div>
    
                    </div>
                </form>
                <br>
                <br>
                <div id="submit_btn" class="ui submit button">예매하기</div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <% include footer.ejs %>

</div>

<!-- Scripts -->
<% include common_footer.ejs %>

<script>

    $("#login_btn").click(function(){

        // 폼 내용 업로드
        var send_json = get_form_data_to_json($("#login_form"));

        var answer_data = ajax_using_query( url = '/login', _sendData = send_json ,
            _callback = function(){}, _isAsync = false);

        if(answer_data["status"] == OK){
            alert("로그인 되었습니다");
        }else{
            alert("로그인에 실패했습니다");
            return;
        }
        location.replace('/');


    });

    $("#submit_btn").click(function(){
                    // 폼 내용 업로드
                    var send_json = get_form_data_to_json($("#registration_nonmem_form"));
                    var answer_data = ajax_using_query( url = '/memornon', _sendData = send_json ,
                        _callback = function(){}, _isAsync = false);

                    if(answer_data["status"] == OK){
                    }else{
                        alert("에러 확인!");
                        return;
                    }
                    location.replace('/booking'); 

                });

</script>
