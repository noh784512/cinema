<html>
<head>
    <title>영화관 등록</title>
    <% include ../common_import.ejs %>

</head>
<body class="no-sidebar">
<div id="page-wrapper">

    <!-- Header -->
    <% include header_admin.ejs %>

    <!-- Main -->
    <div class="wrapper style1">

        <div class="container">

            <form class="ui form" id="registration_theater_form">
                <h4 class="ui dividing header">상영관 등록</h4>

                <div class="field">
                    <div class="field">
                        <label>영화관 번호</label>
                        <input type="text" name="cinema_cd" value="<%=cinema_cd%>">
                    </div>
                    <div class="field">
                        <label>상영관 번호</label>
                        <input type="text" name="theater_no" placeholder="번호를 입력해주세요">
                    </div>

                    <div class="field">
                        <label>상영관 종류</label>
                        <select id="theater_type" name="theater_type"  class="ui dropdown">
                            <option value="IMAX">IMAX</option>
                            <option value="2D">2D</option>
                            <option value="3D">3D</option>
                        </select>
                    </div>
                    <div class="field">
                        <div class="ui horizontal segments">
                            <div class="ui segment">
                                <img class="disabled  ui image" src="/images/seat_type_1.png">
                                <p style="text-align: center;"><strong>타입 1</strong></p>
                            </div>
                            <div class="ui segment">
                                <img class="disabled  ui image" src="/images/seat_type_2.png">
                                <p style="text-align: center;"><strong>타입 2</strong></p>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui form">
                            <div class="grouped fields">
                                <label>영화관 좌석 유형 선택</label>
                                <div class="field">
                                    <div class="ui slider checkbox">
                                        <input type="radio" name="theater_seat_type" checked="checked" value="1">
                                        <label><strong>타입 1</strong></label>
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="ui slider checkbox">
                                        <input type="radio" name="theater_seat_type" value="2">
                                        <label style="text-align: center;"><strong>타입 2</strong></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                    </div>

                </div>
            </form>

            <div id="submit_btn" class="ui submit button">Submit</div>
            <script>

                $("#submit_btn").click(function(){
                    // 폼 내용 업로드
                    var send_json = get_form_data_to_json($("#registration_theater_form"));

                    var answer_data = ajax_using_query( url = '/admin/registration_theater', _sendData = send_json ,
                        _callback = function(){}, _isAsync = false);

                    if(answer_data["status"] == OK){
                        alert("성공!");
                    }else{
                        alert("에러 확인!");
                        return;
                    }
                    location.replace('/admin/manage_cinema'); 

                });

            </script>

        </div>

    </div>

    <!-- Footer -->
    <% include ../footer.ejs %>

</div>

<!-- Scripts -->
<% include ../common_footer.ejs %>
</body>
</html>